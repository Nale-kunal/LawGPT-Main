# Backend Environment Variables
# Copy this file to .env and update with your values

# Server Port
PORT=5000

# MongoDB Connection String
# For local MongoDB: mongodb://127.0.0.1:27017/lawyer_zen
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/lawyer_zen
MONGODB_URI=mongodb://127.0.0.1:27017/lawyer_zen

# JWT Secret - Use a strong random string in production
# Note: If using Firebase Auth, JWT_SECRET is optional but can be used for additional tokens
JWT_SECRET=replace_me_with_strong_secret_key_change_in_production

# CORS Origin - Frontend URL
# For local development: http://localhost:8080
# For production: https://your-frontend-domain.com
# For multiple origins: http://localhost:8080,https://your-frontend-domain.com
CORS_ORIGIN=http://localhost:8080

# Firebase Configuration
# Option 1 (LOCAL ONLY): Path to service account JSON on disk.
# Remove this variable in Railway/Render deployments unless you also copy the file.
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Option 2: Service account JSON as a string. Works anywhere.
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Option 2b: Base64 encoded service account JSON (easier to paste in dashboards).
# FIREBASE_SERVICE_ACCOUNT_BASE64=eyJ0eXBlIjogInNlcnZpY2VfYWNjb3VudCIsIC4uLn0=

# Option 3: Individual Firebase credentials (alternative to service account JSON)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_PRIVATE_KEY_BASE64=LS0tLS1CRUdJTiBQUklWQVRFIEtFWS0tLS0tCg0K...
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Required for email/password login verification via Firebase REST API
# Get this from Firebase Console → Project Settings → General → Web API Key
FIREBASE_WEB_API_KEY=your-firebase-web-api-key

# Cloudinary Configuration
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Optional: NODE_ENV
NODE_ENV=development

