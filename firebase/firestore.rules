rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Example of a public collection (readable by anyone, write requires auth).
    // Adjust or remove if you don't expose any public collections.
    match /publicCollection/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default rule: require authentication for all reads and writes.
    // You should further lock this down per-collection for production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}


